<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light" />

    <style name="BaseTheme.NoActionBar" parent="BaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- gallery activity -->
    <style name="GalleryTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/ActivityFade</item>
    </style>

    <style name="ActivityFade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_fade_out</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/grey2</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ToolbarTitle.Left" parent="ToolbarTitle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="Toolbar.Center" parent="ToolbarTitle">
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="ToolbarTextMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ToolbarTextMenu.Right">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="WeiboFlowCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">@dimen/weibo_flow_list_card_elevation</item>
        <item name="cardCornerRadius">@dimen/weibo_flow_list_card_corner_radius</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="WeiboFlowCardFooterText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">@dimen/text2</item>
        <item name="android:textColor">@color/grey1</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="StatusContentView">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



</resources>
