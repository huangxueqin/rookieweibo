<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StatusTextView">
        <attr name="linkColor" format="color" />
    </declare-styleable>
    
    
    <declare-styleable name="SlideTabLayout">
        <attr name="tab_gravity">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="center" value="3" />
        </attr>

        <attr name="tab_mode">
            <enum name="fit_width" value="1" />
            <enum name="fit_screen" value="2" />
            <enum name="fix_width" value="3" />
        </attr>

        <attr name="tab_style">
            <enum name="plain_text" value="1" />
            <enum name="plain_icon" value="2" />
            <enum name="icon_text" value="3" />
            <enum name="custom" value="4" />
        </attr>

        <attr name="tab_width" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="ScrollableLayout">
        <attr name="nested_child_id" format="reference" />
    </declare-styleable>

    <declare-styleable name="PageIndicator">
        <attr name="pic_width" format="dimension" />
        <attr name="pic_height" format="dimension" />
        <attr name="pic_size" format="dimension" />
        <attr name="pic_spacing" format="dimension" />

        <attr name="indicatorColor" format="color" />
        <attr name="indicatorTintColor" format="color" />
    </declare-styleable>

</resources>