<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rt_status_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/quote_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@mipmap/ic_quote_left_grey"/>

    <com.huangxueqin.rookieweibo.ui.widget.StatusTextView
        android:id="@+id/rt_content_text"
        android:layout_toRightOf="@id/quote_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textSize="@dimen/text2"
        android:textColor="@color/black" />

    <com.huangxueqin.rookieweibo.ui.widget.WeiboImageGrid
        android:id="@+id/rt_image_grid"
        android:layout_alignLeft="@id/rt_content_text"
        android:layout_below="@id/rt_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>