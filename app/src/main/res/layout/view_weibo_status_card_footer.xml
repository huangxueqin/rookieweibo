<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/attitudes_count"
        style="@style/WeiboFlowCardFooterText"
        android:drawableLeft="@mipmap/ic_like_empty_gray"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/reposts_count"
        style="@style/WeiboFlowCardFooterText"
        android:drawableLeft="@mipmap/ic_item_forward_gray"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/comments_count"
        style="@style/WeiboFlowCardFooterText"
        android:drawableLeft="@mipmap/ic_item_comment_gray"
        android:layout_toLeftOf="@id/reposts_count"
        android:layout_marginRight="10dp"/>

</RelativeLayout>