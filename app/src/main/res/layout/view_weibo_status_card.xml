<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WeiboFlowCard">
    <LinearLayout
        android:id="@+id/weibo_card_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/weibo_flow_list_card_padding"
        android:background="@color/white">

        <!-- header -->
        <include
            layout="@layout/view_weibo_status_card_header"
            android:id="@+id/weibo_card_header"/>

        <!-- weibo text -->
        <com.huangxueqin.rookieweibo.widget.StatusTextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/weibo_flow_list_status_text"
            android:textColor="@color/black"/>

        <FrameLayout
            android:id="@+id/status_decorator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </FrameLayout>

        <!-- footer -->
        <include
            layout="@layout/view_weibo_status_card_footer"
            android:id="@+id/weibo_card_footer"/>
    </LinearLayout>
</android.support.v7.widget.CardView>